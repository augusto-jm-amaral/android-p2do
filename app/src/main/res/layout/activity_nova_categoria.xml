<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.augusto.projeto2do.NovaCategoria">

    <TextView
        android:id="@+id/tvNomeCategoria1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nome da Categoria:"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/etNomeCategoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNomeCategoria1"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btnSalvarCategoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNomeCategoria"
        android:text="Salvar"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnExcluirCategoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSalvarCategoria"
        android:text="Excluir"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
